#!/usr/bin/env python
"""Trainer for Tensor2Tensor.

This script is used to train your models in Tensor2Tensor.

For example, to train a lstm_seq2seq model on conll_2002ner run this:

vf-trainer \
  --generate_data \
  --problem=conll2002_es_ner \
  --data_dir=~/t2t_data \
  --tmp_dir=~/t2t_data/tmp \
  --model=lstm_seq2seq \
  --hparams_set=lstm_seq2seq \
  --output_dir=~/t2t_train/conll_ner \
  --train_steps=1000 \
  --eval_steps=100
"""

from vitaflow.bin import vf_trainer

import tensorflow as tf

def main(argv):
  vf_trainer.main(argv)


if __name__ == "__main__":
  tf.logging.set_verbosity(tf.logging.INFO)
  tf.app.run()
